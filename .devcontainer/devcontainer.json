{
	"name": "Public - Quarto Codespaces",
	"image": "ghcr.io/mcanouil/quarto-codespaces:latest",
	"remoteUser": "vscode",
	"postStartCommand": "git switch gh-codespaces && git switch gh-codespaces && git show main:init-env.sh > init-env.sh && chmod +x init-env.sh",
	"features": {
		"ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
			"version": "release",
			"installTinyTex": "false",
			"installChromium": "false"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"quarto.quarto",
				"ms-python.python",
				"ms-python.black-formatter",
				"ms-python.flake8",
				"ms-python.vscode-pylance",
				"ms-python.pylint",
				"ms-python.isort",
				"ms-toolsai.jupyter"
			]
		}
	}
}